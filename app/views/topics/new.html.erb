<div class="topic-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">部屋募集</h1>
        <%= form_for @topic do |f| %>
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :number %>
            <%= f.text_field :number, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :description %>
            <%= f.text_area :description, class: 'form-control', size: "30x10" %>
          </div>
          
          <% if logged_in? %>
          <%= f.submit '投稿', class: 'btn btn-black btn-block' %>
          <% end %>
        
        <% end %>
      </div>
    </div>
  </div>
</div>