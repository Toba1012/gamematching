<div class="topic-index-wrapper">
  <div class="container">
    <% @topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%= topic.user.name %>
            </h2>
            
            <p class="topic-text">
              <%= topic.title %>
            </p>
            
            <p class="topic-text">
              <%= topic.number %>
            </p>
            
            <p class="topic-text">
              <%= topic.description %>
            </p>
            
            <p class="topic-text">
              <%= time_ago_in_words(topic.created_at) %>前に投稿
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>